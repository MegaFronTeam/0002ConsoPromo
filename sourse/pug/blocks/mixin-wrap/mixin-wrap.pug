mixin arrow()
	.swiper-button-hand.swiper-button-hand-prev.swiper-button-prev
		+icon('chevron-left')
	.swiper-button-hand.swiper-button-hand-next.swiper-button-next
		+icon('chevron-right')
//- /arrow for swiper-slider


mixin addblock()
	+b.addBlock
		+e.btn--minus(type="button")
		input(type="text" value="1"  inputmode='numeric')
		+e.btn--plus(type="button")

mixin search()
	+b.search-block.hide-ball
		+e.header
			form
				input(type="text" placeholder="Поиск  " inputmode='search')
				button(type="button")
					+icon("close")
		+e.body.d-none
			.row
				mixin cardS(i,t)
					// start card 
					.col-6
						+b.card
							+e.wrap
								+e.img(href="#")
									+b.img(src=`img/card-${i}.jpg`, alt=`card${i}`)
								+e.body
									+e.title(href="#")
										= t
									+e.text Смотреть
				- for (var x = 0; x < 3; x++)
					+cardS(3,'только для тебя')
					+cardS(4,'аксессуары')
		+e.footer.d-none
			a.btn.btn-primary.w-100(href="#") Все результаты поиска 
		

mixin page-head(t,...items)
	+b.page-head
		- let l = items.length
		.container
			+breadcrumb('Главная',...items)

			h1= t

mixin parts(elem)
	script.
		addBlock(`#{elem}`)
	div(id=`${elem}Wrap`)

mixin productCard(i, title, havePrice, newP, oldP, btn)
	+b.product-card
		+e.slider--js
			+icon('heart')
			.swiper-wrapper
				.swiper-slide
					+e.img-wrap
						+img(`img/product-${i}.png`)
				.swiper-slide
					+e.img-wrap
						+img(`img/product-${i+1}.png`)
				.swiper-slide
					+e.img-wrap
						+img(`img/product-${i+3}.png`)
			.swiper-pagination
		+e.wrapper.text-center
			+e.item.title-card= title
			if !havePrice
				+e.item.descr SM 240110
			if !havePrice
				+e.item.colors
					a.span(href='#', style='background-color:#F6F1D9;')
					a.span(href='#', style='background-color:#A3985A;')
					a.span(href='#', style='background-color:#E6BBC1;')
			if havePrice
				+e.item.have-price= newP 
					if oldP
						span #{ oldP}
				+e.item.colors
					a.span(href='#', style='background-color:#F6F1D9;')
					a.span(href='#', style='background-color:#A3985A;')
					a.span(href='#', style='background-color:#E6BBC1;')
			if !havePrice
				+e.item.price Показать цену
			if btn
				+e.btn.btn.btn-primary(href='#')= btn



